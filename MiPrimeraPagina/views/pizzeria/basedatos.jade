extends ../layout.jade
block contenido
    h1 Productos Disponibles de Pizzas
    table(class = 'table')
        caption Productos Actuales
        thead
            tr
                th Nombre
                th Descripcion
                th Ingredientes
                th Tipo de Masa
                th Tama√±o
                th Cantidad
                th Extra Queso
                th Acciones
        tbody
            each product in products
                tr    
                    td #{product.nombre}
                    td #{product.descripcion}
                    td #{product.ingredientes}
                    td #{product.tipoMasa}
                    td #{product.tamano}
                    td #{product.cantidad}
                    td #{product.extraQueso}
                    td 
                        a(href = "/pizzeria/editar/#{product.id}" class="btn btn-info") Editar
                        = "     "
                        a(href = "/pizzeria/eliminar/#{product.id}" class="btn btn-danger") Eliminar
