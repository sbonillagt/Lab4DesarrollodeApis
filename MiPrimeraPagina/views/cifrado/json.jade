extends ../layout.jade
block contenido
    div(class="col-md-5 center-block no-float text-left")
        h1 Cifrado con JSON
        h2 Ingrese una palabra secreta para poder cifrar
        form(method= "POST" action="/json" style ="margin-top:1.5em;")
            div(class="form-group")
                label Palabra Secreta:
                input(type="text" name="palabraSecreta" placeholder="Ingrese palabra Secreta" class="form-control")
            div(class="form-group text-right")
                input(type="submit" class= "btn btn-info" value ="Guardar")
